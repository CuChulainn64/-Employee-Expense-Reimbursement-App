<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

	<servlet>
		<servlet-name>FrontController</servlet-name>
		<servlet-class>com.revature.web.FrontController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>/login</url-pattern>
		<url-pattern>/employee-home</url-pattern>
		<url-pattern>/logout</url-pattern>
		<url-pattern>/submit</url-pattern>
		<url-pattern>/my-requests</url-pattern>
		<url-pattern>/my-pending</url-pattern>
		<url-pattern>/my-resolved</url-pattern>
		<url-pattern>/my-info</url-pattern>
		<url-pattern>/update</url-pattern>
		
		<url-pattern>/manager-home</url-pattern>
		<url-pattern>/approve</url-pattern>
		<url-pattern>/deny</url-pattern>
		<url-pattern>/all-pending</url-pattern>
		<url-pattern>/all-resolved</url-pattern>
		<url-pattern>/employees</url-pattern>
		<url-pattern>/employee-requests</url-pattern>
	</servlet-mapping>

	<error-page>
		<error-code>404</error-code>
		<location>/error</location>
	</error-page>
</web-app>